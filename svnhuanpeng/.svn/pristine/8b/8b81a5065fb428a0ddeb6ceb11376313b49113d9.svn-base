<extend name="Base/matrix" />
<block name="content">
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> <a href="javascript:;"><eq name="status" value='1'>操作成功<else />操作失败</eq></a> </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                            <h5><eq name="status" value='1'>操作成功<else />操作失败</eq></h5>
                        </div>
                        <div class="widget-content">
                            <div class="error_ex">
                        <empty name="message">
                        <h1 style="color:red">{{$error}}</h1>				    		
                        <else/>
                        <h1>{{$message}}</h1>					    		
                        </empty>
                                <p class="p1"><span>{{$waitSecond}}</span>秒后自动跳转，如没有跳转请</p>   
                                <p class="p2"><a class="btn btn-warning btn-big" href="{{$jumpUrl}}">点击这里</a></p>   
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</block>
<block name="jsadd">
<script type="text/javascript">
$(function(){
    var s=$('#content .p1 span'),sv,
        url=$('#content .p2 a').attr('href');
        (function(){
            if(sv){
                s.text(--sv);
            }else{
                sv=s.text();
            }
            if(sv<1){
                window.location=url;
                return; 
            }
            setTimeout(arguments.callee,1000);
        })();
});
</script>
</block>