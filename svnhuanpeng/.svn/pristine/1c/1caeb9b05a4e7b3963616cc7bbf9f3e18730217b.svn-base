@charset "UTF-8";
* {
  margin: 0;
  padding: 0;
  border: 0;
}
html,
body {
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  font-family: serif;
  background-color: #151616;
  color: #fff;
}
.content {
  padding-bottom: 3.75rem;
}
.content .top-img {
  height: 16.375rem;
  background: url("../images/top-img.png") top center no-repeat;
  background-size: 100%;
}
.content .blank-box {
  margin: -0.625rem auto 0;
  background-color: #151616;
}
.content .blank-box .blank-1-bg,
.content .blank-box .blank-2-bg,
.content .blank-box .blank-3-bg,
.content .blank-box .blank-4-bg,
.content .blank-box .blank-5-bg {
  height: 3.5625rem;
  margin: 0.3125rem 0;
}
.content .blank-box .blank-1-bg {
  background: url("../images/blank-1.png") top center no-repeat;
}
.content .blank-box .blank-2-bg {
  background: url("../images/blank-2.png") top center no-repeat;
}
.content .blank-box .blank-3-bg {
  background: url("../images/blank-3.png") top center no-repeat;
}
.content .blank-box .blank-4-bg {
  background: url("../images/blank-4.png") top center no-repeat;
}
.content .blank-box .blank-5-bg {
  background: url("../images/blank-5.png") top center no-repeat;
}
.content .blank-box .blank-1 {
  width: 90%;
  margin: 0 auto;
}
.content .blank-box .blank-1 p {
  text-align: left;
  font-size: 0.875rem;
}
.content .blank-box .blank-1,
.content .blank-box .blank-2,
.content .blank-box .blank-3,
.content .blank-box .blank-4,
.content .blank-box .blank-5 {
  width: 90%;
  margin: 0 auto;
}
.content .blank-box .blank-1 h2,
.content .blank-box .blank-2 h2,
.content .blank-box .blank-3 h2,
.content .blank-box .blank-4 h2,
.content .blank-box .blank-5 h2 {
  font-size: 1rem;
  font-weight: 400;
  margin-left: 1.25rem;
}
.content .blank-box .blank-1 p,
.content .blank-box .blank-2 p,
.content .blank-box .blank-3 p,
.content .blank-box .blank-4 p,
.content .blank-box .blank-5 p {
  margin-left: 1.25rem;
  font-size: 0.875rem;
  letter-spacing: 0.0625rem;
  line-height: 1.25rem;
  word-break: break-all;
}
.content i {
  color: #ff7800;
  font-style: normal;
  font-weight: normal;
}
.hp_download {
  position: fixed;
  z-index: 99999;
  left: 0;
  right: 0;
  bottom: 0;
  height: 3.125rem;
  background-color: #282828;
  opacity: 0.88;
  font-family: 微软雅黑;
}
.hp_download .close {
  float: left;
  width: 1.25rem;
  height: 1.25rem;
  padding: 0.9375rem 0.1875rem;
  box-sizing: content-box;
}
.hp_download figure {
  margin: 0;
  padding-top: 0.3125rem;
  margin-left: 0.1875rem;
  float: left;
}
.hp_download figure > img {
  float: left;
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 0.3125rem;
}
.hp_download figure figcaption {
  float: left;
  margin-left: 0.5rem;
}
.hp_download figure figcaption p {
  color: #ff7800;
  font-size: 0.875rem;
  letter-spacing: 0.03125rem;
  margin-bottom: 0.4rem;
}
.hp_download figure figcaption span {
  font-size: 0.5rem;
  color: grey;
}
.hp_download .openApp {
  float: right;
  color: #fff;
  font-size: 0.5rem;
  background-color: #ff7800;
  border: none;
  padding: 0.4rem 0.2rem;
  margin-top: 0.75rem;
  margin-right: 0.5rem;
  text-decoration: none;
  border-radius: 0.3125rem;
}
