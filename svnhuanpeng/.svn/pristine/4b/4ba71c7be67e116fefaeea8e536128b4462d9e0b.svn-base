* {
  margin: 0;
  padding: 0;
  border: 0;
}
html,
body {
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  font-family: serif;
  background-color: #fff;
  color: #000;
  font-family: "微软雅黑";
}
/*common*/
.l {
  float: left;
  display: inline;
}
.r {
  float: right;
  display: inline;
}
.of {
  overflow: hidden;
  *zoom: 1;
}
.block {
  display: block;
}
.none {
  display: none;
}
.clearfix {
  clear: both;
}
.tac {
  text-align: center;
}
.content {
  width: 92%;
  margin: 0 auto;
}
.content .main {
  font-size: 0.92857143rem;
}
.content .main h2 {
  padding: 0.35714286rem 0;
  font-size: 1.42857143rem;
}
.content .main h3 {
  padding: 0.35714286rem 0;
  font-size: 1.28571429rem;
}
.content .main p {
  line-height: 1.57142857rem;
}
.content .main .btnBox {
  margin: 1.07142857rem 0;
  text-align: center;
}
.content .main .btnBox .recharge_btn {
  display: inline-block;
  padding: 0.17857143rem 0.71428571rem;
  border: 1px solid #000;
  border-radius: 5px;
  font-size: 1.07142857rem;
  color: #000;
}
