@charset "UTF-8";
*{
  margin: 0;
  padding: 0;
  border: 0;
}
html,body{
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  font-family: serif;
  background-color: #151616;
  color: #fff;
}

.content{
  padding-bottom: 60/16rem;
  .top-img{
    height: 220/16rem;
    background: url("../images/top-img.png") top center no-repeat;
    background-size: 100%;
  }
  .blank-box{
    margin: -10/16rem auto 0;
    background-color: #151616;
    .blank-1-bg,.blank-2-bg,.blank-3-bg{
      height: 45/16rem;
      margin: 5/16rem 0;
    }
    .blank-1-bg{
      background: url("../images/blank-1.png") top center no-repeat;
    }
    .blank-2-bg{
      background: url("../images/blank-2.png") top center no-repeat;
    }
    .blank-3-bg{
      background: url("../images/blank-3.png") top center no-repeat;
    }
    .blank-1{
      width: 90%;
      margin: 0 auto;
      p{
        text-align: center;
        font-size: 18/16rem;
      }
    }
    .blank-2,.blank-3{
      width: 90%;
      margin: 0 auto;
      h2{
        font-size: 16/16rem;
        font-weight: 400;
      }
      p{
        margin-left: 20/16rem;
        font-size: 14/16rem;
        letter-spacing: 1/16rem;
        line-height: 20/16rem;
        word-break: break-all;
      }
    }
  }
  i{
    color: #ff7800;
    font-style: normal;
    font-weight: normal;
  }
}

.hp_download{

  position: fixed;
  z-index: 99999;
  left: 0;
  right: 0;
  bottom: 0;
  height: 3.125rem;
  background-color: #282828;
  opacity: 0.88;
  font-family: 微软雅黑;
}
.hp_download .close{
  float: left;
  width: 1.25rem;
  height: 1.25rem;
  padding: 0.9375rem 0.1875rem;
  box-sizing: content-box;
}
.hp_download figure{
  margin: 0;
  padding-top: 0.3125rem;
  margin-left: 0.1875rem;
  float: left;
}
.hp_download figure>img{
  float: left;
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 0.3125rem;
}
.hp_download figure figcaption{
  float: left;
  margin-left: 0.5rem;
}
.hp_download figure figcaption p{
  color: #ff7800;
  font-size: 0.875rem;
  letter-spacing: 0.03125rem;
  margin-bottom: 0.4rem;
}
.hp_download figure figcaption span{
  font-size: 0.5rem;
  color: grey;
}
.hp_download .openApp{
  float: right;
  color: #fff;
  font-size: 0.5rem;
  background-color: #ff7800;
  border: none;
  padding: 0.4rem 0.2rem;
  margin-top: 0.75rem;
  margin-right: 0.5rem;
  text-decoration: none;
  border-radius: 0.3125rem;
}