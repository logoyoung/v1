@CHARSET "UTF-8";
body {
	background-color: #eeeeee;
	color:#444;
	font-size:12px;
}
.icon_set{
    background:url(../img/icon/icon_set_1.png) no-repeat;
}
#gameType{
	margin: 70px auto 40px;
    min-height: 800px;
    background: #fff;
    padding: 0 0 20px 0;
    border:1px solid #e7e7e7;
}

.w1180#gameType{  
	width:1180px;
}
.w980#gameType{
	width:980px;	
}

#gameType .game_block{
    display:inline-block;
	background: #fff;
	width:100%;
}
#gameType .game_block .title{
	font-size: 22px;
    color: rgb(51, 51, 51);
    line-height: 1.2;

    margin: 0 20px;
    padding: 20px 0 14px 0;
    border-bottom: 1px solid #e7e7e7;
}
#gameType .game_block ul{ 
	margin:20px;
	float:left; 
}

.game_block ul li {
    padding: 10px;
	list-style-type: none;
    float: left;
	transition:all .3s ease-in-out;
	-webkit-transition:all .3s ease-in-out;
	-moz-transition:all .3s ease-in-out;
	position:relative;
	border-top:1px solid #fff;
	border-left:1px solid #fff;
	border-right:1px solid #fff;
    border-bottom:2px solid transparent;
} 
.w980 .game_block ul li{
	 margin: 0;
}
.w1180 .game_block ul li{
	 margin: 1px;
}
.w980 .game_block ul li img{
    width: 100%;
    height:100%;
}
.w1180 .game_block ul li img{
    width: 100%;
    height:100%;
}
.game_block ul li:hover {
    background: #fff;
	border-bottom-color: #d2d2d2;
	border-top:1px solid #e7e7e7;
	border-left:1px solid #e7e7e7;
	border-right:1px solid #e7e7e7;
}
.game_block ul a {
    width: 166px;
    height: 213px;
	display: block;
}
.game_block ul .liveinfo {
    height: 40px;
    width: 164px;
    padding: 6px 1px;
    float: left;
    color: #999;
}
.liveinfo .count {
    width: 24px;
    height: 17px;
    float: right;
    display: block;
    margin-top: 11px;
    background-position: -339px -81px;
}
.liveinfo .gt {
    padding: 11px 0;
    font-size: 14px;
    float: left;
    color: #444;
}
.liveinfo .count_txt {
    font-size: 12px;
    float: right;
    line-height: 44px;
    width: 15px;
    text-align: right;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}