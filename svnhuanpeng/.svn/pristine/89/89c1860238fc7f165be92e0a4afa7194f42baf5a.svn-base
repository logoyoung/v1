<extend name="Base/matrix" />
<block name="content">
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"><a href="javascript:;" ><i class="icon-home"></i>投票活动管理</a><a href="javascript:;" ></i>投票列表</a></div>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
          <div class="widget-box">
            <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
            <h5>投票列表--活动：{{$activity.activity}}</h5>
            </div>
          <div class="widget-content">
            <div class="text-center mb10 ln38">
                <form class="form-search">
				  <select class="select2 span2" name="aid">
                    <foreach name="allactivity" item="v" key='key'>
                        <option value="{{$key}}" <if condition="$Think.get.aid eq $key">selected</if> >{{$v}}</option>
                    </foreach>
                  </select>
				  <input type="text" class="w120" name="uid" value="{{$Think.get.uid}}" placeholder="用户ID">
				  <select class="span2" name="hero_id">
					<option value="0">请选择英雄</option>
                    <foreach name="voteNums" item="v" key='key'>
                        <option value="{{$key}}" <if condition="$Think.get.hero_id eq $key">selected</if> >{{$v.hero}}</option>
                    </foreach>
                  </select>
                  <input type="text" name="stime" class="form_datetime w100"  value="{{$Think.get.stime}}" placeholder="开始时间">
				  <input type="text" name="etime" class="form_datetime w100"  value="{{$Think.get.etime}}" placeholder="结束时间">
				  
                  <button type="submit" class="btn">搜索</button>
                  <button type="submit" class="btn" name="export" value="1">导出</button><br>
                </form>
            </div>
			<div class="oyat">    
            <table class="table table-bordered table-striped" id="oCenter" style="">
			  <thead>
                <tr>
                  <th>英雄名称</th>
                  <th>图片</th>
                  <th>背景图片</th>
                  <th>票数</th>
                </tr>
              </thead>
              <tbody>
              <foreach name="voteNums" item="item">
                <tr>
                  <td>{{$item.hero}}</td>
                  <td><notempty name='item.img'><img style="height:50px; width:50px" src="{{$item.img}}" /><else/>--</notempty></td>
                  <td><notempty name='item.bgImg'><img style="height:50px; width:50px" src="{{$item.bgImg}}" /><else/>--</notempty></td>
				  <td>{{$item.nums}}</td>
                </tr>
              </foreach>
              </tbody>
			</table>
			<table class="table table-bordered table-striped">
              <thead>
                <tr>
				  <th>用户头像</th>
                  <th>用户ID</th>
                  <th>用户昵称</th>
                  <th>投票</th>
                  <th>投票时间</th>
                </tr>
              </thead>
              <tbody>
              <foreach name="data" item="item">
                <tr>
                  <td><img style="height:50px; width:50px" src="{{$item.avator}}" /></td>
                  <td>{{$item.uid}}</td>
                  <td>{{$item.nick}}</td>
                  <td>{{$item.hero}}</td>
                  <td>{{$item.utime}}</td>
                </tr>
              </foreach>
              </tbody>
            </table>
            <div class="pagination alternate text-center">{{$page}}</div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</block>
<block name="cssadd">
<link rel="stylesheet" href="__RES__css/bootstrap-datetimepicker.min.css" />
</block>
<block name="jsadd">
<script src="__RES__js/bootstrap-datetimepicker.min.js"></script>
<script>
    $('.form_datetime').datetimepicker({
        format: 'yyyy-mm-dd',
        showMeridian: false,
        autoclose: true,
        minView: 2,
        todayBtn: true,
    });
	$(document).ready(function(){
		$(".form-search").find(".select2-container").css('float', 'inherit');
		$(".form-search").find(".select2-container").css('display', 'inline-table');
		$(".form-search").children().each(function(){
			$(this).css('margin-bottom', '10px');
		}); 
	});
</script>
</block>
