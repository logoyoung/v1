<extend name="Base/matrix" />
<block name="content">
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"><a href="javascript:;" ><i class="icon-home"></i>直播检测</a><a href="javascript:;" ></i>直播检测</a></div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
                            <h5>直播IP检测</h5>
                        </div>
                        <div class="widget-content">
                            <div class="text-center mb10 ln38">
                                <form class="form-search">
                                    <input type="text" id="timestart" name="timestart" class="form_datetime w100"  value="{{$Think.get.timestart}}" placeholder="开始时间">  <input type="text" id = "timeend" name="timeend" class="form_datetime w100"  value="{{$Think.get.timeend}}" placeholder="结束时间">
                                    <!--<input type="text" class="w120" name="name" value="{{$Think.get.name}}" placeholder="优惠券名称">-->
                                    <!--<select class="span2" name="status">
                                        <option value='-1' <eq name="Think.get.status" value="-1" >selected</eq>>所有</option>
                                        &lt;!&ndash;<option value='-2' <eq name="Think.get.status" value="-2" >selected</eq>>未上传</option>&ndash;&gt;
                                        <foreach name="status" item="v" key='key'>
                                            <option value="{{$key}}" <if condition="$Think.get.status eq $key">selected</if> >{{$v}}</option>
                                        </foreach>
                                    </select>-->
                                    <button type="submit" class="btn">搜索</button>
                                    <button type="submit" class="btn" name="export" value="1">导出</button>
                                    <br>
                                </form>
                            </div>



                            <div class="oyat">
                                <table class="table table-bordered table-striped" id="oCenter" style="">
                                    <thead>
                                    <tr>
                                        <th>IP</th>
                                        <th>用户数</th>
                                        <th>明细</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <foreach name="data" item="item">
                                        <tr>
                                            <td>{{$item.ip}}</td>
                                            <td>{{$item.usercount}}</td>
                                            <td><a target="_blank" href="/checklive/record?type=ip&timestart={{$Think.get.timestart}}&timeend={{$Think.get.timeend}}&&ip={{$item.ip}}">查看</a></td>
                                        </tr>
                                    </foreach>
                                    </tbody>
                                </table>
                                <div class="pagination alternate text-center">{{$page}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</block>
<block name="cssadd">
    <link rel="stylesheet" href="__RES__css/bootstrap-datetimepicker.min.css" />
</block>
<block name="jsadd">
    <script src="__RES__js/bootstrap-datetimepicker.min.js"></script>
    <script>
        $(document).ready(function(){
            // Autocomplete on User Supplied data
            $.get('/public/getlist',{status:'0'},function(datas){
                $('#companyname').change(function() {
                    $('#cid').val('');
                });
                $('#companyname').autocomplete({
                    lookup:datas,
                    onSelect:function(data){
                        $('#cid').val(data.id);
                        $('#companyname').val(data.value);
                    }
                });
            },'json');
        });
        $('.form_datetime').datetimepicker({
            format: 'yyyy-mm-dd',
            showMeridian: false,
            autoclose: true,
            minView: 2,
            todayBtn: true,
        });

    </script>
</block>
