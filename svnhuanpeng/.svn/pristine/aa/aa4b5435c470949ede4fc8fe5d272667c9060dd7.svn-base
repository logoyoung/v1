<extend name="Base/matrix" />
<block name="content">
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"><a href="javascript:;" ><i class="icon-home"></i>我的推广</a><a href="javascript:;" ></i>用户列表</a></div>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
          <div class="widget-box">
            <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
            <h5>用户列表--（推广码:{{$promocode}}）</h5>
            </div>
          <div class="widget-content">
            <div class="text-center mb10 ln38">
                <form class="form-search">
                  <input type="text" class="w120" name="uid" value="{{$Think.get.uid}}" placeholder="用户id">
                  <input type="text" class="w120" name="nick" value="{{$Think.get.nick}}" placeholder="用户昵称">
				  <input type="text" name="timestart" class="form_datetime w100"  value="{{$Think.get.timestart}}" placeholder="注册开始时间">
				  <input type="text" name="timeend" class="form_datetime w100"  value="{{$Think.get.timeend}}" placeholder="注册结束时间">
                  <button type="submit" class="btn">搜索</button>
                  <button type="submit" class="btn" name="export" value="1">导出</button>
                </form>
            </div>

        <div class="oyat">    
            <table class="table table-bordered table-striped" id="oCenter" style="">
              <thead>
                <tr>
                  <th>头像</th>
                  <th>UID</th>
                  <th>昵称</th>
                  <th>注册时间</th>
                  <th>操作</th>
                </tr>
              </thead>
              <tbody>
              <foreach name="data" item="item">
                <tr>
                  <td><img style="width: 40px; height: 40px;" src="{{$item.pic}}"/></td>
                  <td>{{$item.uid}}</td>
                  <td>{{$item.nick|default='--'}}</td>
                  <td>{{$item.rtime}}</td>
                  <td><a class="badge badge-info" href="javascript:alert('敬请期待');">查看详情</a></td>
                </tr>
              </foreach>
              </tbody>
            </table>
            <div class="pagination alternate text-center">{{$page}}</div>
          </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
</block>
<block name="cssadd">
<link rel="stylesheet" href="__RES__css/bootstrap-datetimepicker.min.css" />
</block>
<block name="jsadd">
<script src="__RES__js/bootstrap-datetimepicker.min.js"></script>
<script>
    $('.form_datetime').datetimepicker({
        format: 'yyyy-mm-dd',
        showMeridian: false,
        autoclose: true,
        minView: 2,
        todayBtn: true,
    }); 
</script>
</block>
