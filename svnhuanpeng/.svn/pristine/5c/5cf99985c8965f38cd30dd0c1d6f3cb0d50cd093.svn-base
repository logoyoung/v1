@charset "UTF-8";
.person-container {
  font-family: 微软雅黑;
  width: 908px;
  min-width: 908px;
  height: 887px;
  padding: 40px 20px;
  margin: 0 auto;
}
.person-container .person-title{
  padding-bottom: 20px;
  border-bottom: 1px solid #ccc;
}
.person-container .person-title h2 {
  font-size: 20px;
  text-indent: 10px;
  color: #333;
}
.person-container hr {
  margin-top: 20px;
  width: 100%;
  height: 1px;
  color: #7f7f7f;
}
.person-container .person-content {
  width: 700px;
  height: 120px;
  padding-top: 20px;
  padding-left: 20px;
}
.person-container .person-content .person-img {
  float: left;
  width: 120px;
  height: 120px;
  overflow: hidden;
}
.person-container .person-content .person-img img {
  width: 120px;
  height: 120px;
}
.person-container .person-content .person-result {
  float: left;
  margin-left: 30px;
  height: 110px;
  width: 525px;
  padding-top: 10px;
}
.person-container .person-content .person-result .resultFirst {
  width: 525px;
  height: 24px;
  line-height: 24px;
}
.person-container .person-content .person-result .resultFirst .result-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}
.person-container .person-content .person-result .resultSecond {
  width: 525px;
  height: 20px;
  padding-top: 10px;
}
.person-container .person-content .person-result .resultSecond .result-level {
  float: left;
  width: 30px;
  height: 20px;
}
.person-container .person-content .person-result .resultSecond .level-fac {
  margin-top: 3px;
  float: left;
  margin-left: 10px;
  width: 260px;
  height: 16px;
  border-radius: 2px;
  background-color: #ccc;
}
.person-container .person-content .person-result .resultSecond .level-fac .allPro {
  -moz-transition: all 300ms linear;
  -o-transition: all 300ms linear;
  -ms-translation: all 300ms linear;
  -webkit-transition: all 300ms linear;
  transition: all 300ms linear;
  /*width: 200px;*/
  width: 0;
  height: 16px;
  line-height: 16px;
  font-size: 12px;
  color: #eee;
  background-color: #ffa04c;
  text-align: center;
}
.person-container .person-content .person-result .resultThird {
  width: 525px;
  height: 26px;
}
.person-container .person-content .person-result .resultThird p {
  font-size: 14px;
  line-height: 26px;
  color: #333;
}
.person-container .person-content .person-result .resultThird p span {
  color: #666;
  display: inline-block;
  vertical-align: middle;
}
.person-container .person-content .person-result .resultFourth {
  width: 525px;
  height: 26px;
}
.person-container .person-content .person-result .resultFourth > p {
  display: inline-block;
  line-height: 26px;
  font-size: 14px;
  color: #333;
}
.person-container .person-content .person-result .resultFourth span {
  color: #666;
  display: inline-block;
  vertical-align: middle;
}
.person-container .person-content .person-result .resultFourth .proTime {
  margin-left: 60px;
}
.person-container .proMost {
  width: 800px;
  height: 500px;
  margin: 20px 0 0 20px;
}
.person-container .proMost h2 {
  font-size: 20px;
  color: #333;
}
.person-container .proMost .monthLink {
  margin-top: 20px;
  margin-bottom: 10px;
}
.person-container .proMost .monthLink > a {
  text-align: center;
  color: #666;
  background-color: #e4e4e4;
  width: 60px;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  border-radius: 14px;
  display: inline-block;
  margin-right: 18px;
  cursor: pointer;
}
.person-container .proMost .monthLink .curr {
  background-color: #ffa04c;
  color: #fff;
}
.person-container .proMost .chartShow {
  overflow: hidden;
  width: 800px;
  height: 360px;
  position: relative;
}
.person-container .proMost .chartShow .chartShow-content {
  width: 800px;
  height: 360px;
}
.person-container .proMost > p {
  width: 800px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #666;
  text-align: center;
}
.person-container .proMost > p #top {
  font-size: 22px;
  color: #ff7800;
}
.person-container .commit {
  width: 785px;
  height: 30px;
  line-height: 30px;
  margin: 10px 0 10px 56px;
  text-align: center;
}
.person-container .commit > p {
  font-size: 12px;
  letter-spacing: 1px;
  color: #666;
}
.person-container .person-footer {
  width: 950px;
  height: 135px;
}
.person-container .person-footer > div {
  width: 100px;
  height: 100px;
  float: left;
}
.person-container .person-footer > div > a {
  text-decoration: none;
  color: #333;
}
.person-container .person-footer > div > a > p {
  width: 100px;
  font-weight: bold;
  color: #333;
  font-size: 18px;
  text-align: center;
}
.person-container .person-footer > div:first-of-type {
  margin-left: 160px;
}
.person-container .person-footer > div:nth-of-type(2),
.person-container .person-footer > div:nth-of-type(3) {
  margin-left: 145px;
}
