<extend name="Base/matrix" />
<block name="content">
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"><a href="javascript:;" ><i class="icon-home"></i>礼物列表</a><a href="javascript:;" ></i>礼物赠送统计</a></div>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
          <div class="widget-box">
            <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
            <h5>礼物赠送统计</h5>
            </div>
          <div class="widget-content">
            <div class="text-center mb10 ln38">
                <form class="form-search">
                  <input type="text" name="timestart" class="form_datetime w100"  value="{{$Think.get.timestart}}" placeholder="开始时间">
				  <input type="text" name="timeend" class="form_datetime w100"  value="{{$Think.get.timeend}}" placeholder="结束时间">
                  <button type="submit" class="btn">搜索</button>
                  <button type="submit" class="btn" name="export" value="1">导出</button>
                </form>
            </div>
            
        <div class="oyat">    
            <table class="table table-bordered table-striped" id="oCenter" style="">
              <thead>
                <tr>
                  <th>#</th>
				  <foreach name="allGift" item="item">
                  <th colspan="2">{{$item}}</th>
				  </foreach>
                </tr>
                <tr>
                  <th>#</th>
				  <foreach name="allGift" item="item">
                  <th>数量</th><th>价值</th>
				  </foreach>
                </tr>
              </thead>
              	<tbody>
              	<tr>
              		<td>总计</td>
              		<foreach name="total" item="item">
                  <td>{{$item.num}}</td><td>{{$item.cost}}</td>
				  </foreach>
				  </tr>
              	</tbody>
              <thead>
                <tr>
                  <th>日期</th>
				  <foreach name="allGift" item="item">
                  <th colspan="2">{{$item}}</th>
				  </foreach>
                </tr>
                <tr>
                  <th>#</th>
				  <foreach name="allGift" item="item">
                  <th>数量</th><th>价值</th>
				  </foreach>
                </tr>
              </thead>
              <tbody>
              <foreach name="data" item="item" key="key">
                <tr>
                  <td>{{$key}}</td>
				  <foreach name="item" item="item2" key="key2">
                      <td>
                          <if condition="($key2 gt 31) AND ($item2.num gt 0) ">
                              <a style="color: blue" title="点击查看详情"
                                 href="/cost/usercostdetail?giftid={{$key2}}&timestart={{$key}}&timeend={{$key}}" target="_blank">
                                  {{$item2.num}}
                              </a>
                              <else/>{{$item2.num}}
                          </if>
                      </td>
                      <td>{{$item2.cost}}</td>
				  </foreach>
                </tr>
              </foreach>
              </tbody>
            </table>
            <div class="pagination alternate text-center">{{$page}}</div>
          </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
</block>
<block name="cssadd">
<link rel="stylesheet" href="__RES__css/bootstrap-datetimepicker.min.css" />
</block>
<block name="jsadd">
<script src="__RES__js/bootstrap-datetimepicker.min.js"></script>
<script>
    $('.form_datetime').datetimepicker({
        format: 'yyyy-mm-dd',
        showMeridian: false,
        autoclose: true,
        minView: 2,
        todayBtn: true,
    });
</script>
</block>
