<extend name="Base/matrix" />
<block name="content">
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"><a href="javascript:;" ><i class="icon-home"></i>主播统计</a><a href="javascript:;" ></i>人气统计</a></div>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
          <div class="widget-box">
            <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
            <h5>人气统计</h5>
            </div>
          <div class="widget-content">
            <div class="text-center mb10 ln38">
                <form class="form-search">
				  <input type="text" name="uid" class="w100"  value="{{$Think.get.uid}}" placeholder="主播ID">
                  <input type="text" name="timestart" class="form_datetime w100"  value="{{$Think.get.timestart}}" placeholder="开始时间">
				  <input type="text" name="timeend" class="form_datetime w100"  value="{{$Think.get.timeend}}" placeholder="结束时间">
                  <button type="submit" class="btn">搜索</button>
                  <button type="submit" class="btn" name="export" value="1">导出</button>
                </form>
            </div>
            
        <div class="oyat">    
            <table class="table table-bordered table-striped" id="oCenter" style="">
              <thead>
                <tr>
				  <th>主播ID</th>
                  <th>日期</th>
                  <th>#</th>
				  <foreach name="hours" item="item">
                  <th>{{$item}}点</th>
				  </foreach>
                </tr>
              </thead>
              <tbody>
              <foreach name="data" item="item" key="key">
                <tr>
                  <td>{{$item.uid}}</td>
				  <td>{{$item.date}}</td>
				  <td>展示数量<br/>真实数量<br/>次数</td>
			  	<foreach name="item" item="item2" key="key2">
			  	<if condition="($key2 nheq 'uid') and ($key2 nheq 'date')">
                  <td>{{$item[$key2]}}</td>
                  </if>
				 </foreach>
                </tr>
              </foreach>
              </tbody>
            </table>
            <div class="pagination alternate text-center">{{$page}}</div>
          </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
</block>
<block name="cssadd">
<link rel="stylesheet" href="__RES__css/bootstrap-datetimepicker.min.css" />
</block>
<block name="jsadd">
<script src="__RES__js/bootstrap-datetimepicker.min.js"></script>
<script>
    $('.form_datetime').datetimepicker({
        format: 'yyyy-mm-dd',
        showMeridian: false,
        autoclose: true,
        minView: 2,
        todayBtn: true,
    });
</script>
</block>
